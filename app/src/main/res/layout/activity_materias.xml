<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.windows.proyectopersonal.materias"
    android:orientation="vertical"
   >

    <TextView android:text="@string/addmateria" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:hint="Nombre Materia"
        android:drawableLeft="@android:drawable/ic_input_get" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:hint="Nombre profesor"
        android:drawableLeft="@android:drawable/ic_menu_my_calendar" />
    <com.getbase.floatingactionbutton.AddFloatingActionButton
        android:id="@+id/addmateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="16dp"
        android:layout_x="260dp"
        android:layout_y="460dp"
        android:baselineAlignBottom="false" />
</LinearLayout>
